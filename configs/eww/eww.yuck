    (button :onclick "hyprctl dispatch workspace 2" "ï„¡")
    (button :onclick "hyprctl dispatch workspace 3" "ï„›")
    (button :onclick "hyprctl dispatch workspace 4" "ï‰º")
    (button :onclick "hyprctl dispatch workspace 5" "ï†¼")
    (button :onclick "hyprctl dispatch workspace 6" "ï€½")
    (button :onclick "hyprctl dispatch workspace 7" "7")
    (button :onclick "hyprctl dispatch workspace 8" "8")
